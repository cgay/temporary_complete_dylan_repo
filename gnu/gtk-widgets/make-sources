
#  Dylan libraries for interfacing with GTK.
#
#  This file controls the generation of source files that are created
#  automatically by adapting information from the GTK C header files.

# Copyright (C) 1998 Functional Objects, Inc. All rights reserved.


GTK=gtkseparator.dylan gtklabel.dylan \
    gtkbutton.dylan gtkcheckbutton.dylan gtkradiobutton.dylan \
    gtktogglebutton.dylan gtkrange.dylan \
    gtkscrolledwindow.dylan gtkviewport.dylan \
    gtkscrollbar.dylan gtkhscrollbar.dylan gtkvscrollbar.dylan \
    gtkscale.dylan gtkhscale.dylan gtkvscale.dylan \
    gtkeditable.dylan gtkentry.dylan gtktext.dylan \
    gtkitem.dylan gtklist.dylan gtkclist.dylan gtklistitem.dylan \
    gtkmenushell.dylan gtkmenu.dylan gtkmenubar.dylan \
    gtkmenufactory.dylan gtkmenuitem.dylan \
    library.dylan
GTKTOD=$(XTOD) -module gtk-widgets -f $(COMSLOT) -f $(GTKSLOT)

all: $(GTK)

include ../glib/sources.mak


library.dylan: library.src gtkseparator.dylan gtklabel.dylan \
               gtkbutton.dylan gtkcheckbutton.dylan gtkradiobutton.dylan \
               gtktogglebutton.dylan gtkrange.dylan \
               gtkscrolledwindow.dylan gtkviewport.dylan \
               gtkscrollbar.dylan gtkhscrollbar.dylan gtkvscrollbar.dylan \
               gtkscale.dylan gtkhscale.dylan gtkvscale.dylan \
               gtkeditable.dylan gtkentry.dylan gtktext.dylan \
               gtkitem.dylan gtklist.dylan gtkclist.dylan gtklistitem.dylan \
               gtkmenushell.dylan gtkmenu.dylan gtkmenubar.dylan \
               gtkmenufactory.dylan gtkmenuitem.dylan
  
dependencies: $(PATTERN-DEP) $(COMSLOT) $(GTKSLOT) make-sources obsolete.text
  
gtkbutton.dylan: $(GTKHDIR)/gtkbutton.h dependencies
	$(GTKTOD) $(GTKHDIR)/gtkbutton.h $@

gtkseparator.dylan: $(GTKHDIR)/gtkseparator.h dependencies
	$(GTKTOD) $(GTKHDIR)/gtkseparator.h $@

