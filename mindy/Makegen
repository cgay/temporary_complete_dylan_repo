
if ($features{'compiled_for_unix'}) {
    &compile_subdirs('compat', 'interp', 'comp', 'etc');

} elsif ($features{'compiled_for_win32'}) {
    unless (-r $MINDY && -r $MC) {
        print STDERR "\nWarning: Mindy compiler and interpreter not found.\n",
             "You must compile them using VC++ or some other way.\n",
             "See $srcdir\\mindy\\MS-Windows\\README\n\n";
    }             
} else {
    &unknown_platform_error();
}

&compile_subdirs('libraries', 'demos');
