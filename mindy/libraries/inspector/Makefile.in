##  This is the makefile for the "demo" directory
##

SHELL	=	/bin/sh

##
## begin autoconf'ed source
##

prefix	=		@prefix@
exec_prefix	=	@exec_prefix@
srcdir	=		@srcdir@

SRCDIR	=		${srcdir}
BINDIR	=		${exec_prefix}/bin
LIBDIR	=		${exec_prefix}/lib/mindy

CC	=		@CC@
CCOPTS	=		@CCOPTS@
CFLAGS	=		$(CCOPTS) -I${SRCDIR} @DEFS@ -DBINDIR=\"${BINDIR}\" -DLIBDIR=\"${LIBDIR}\"
YACC	=		@YACC@
YFLAGS	=		-d
LEX	=		@LEX@
LFLAGS	=		@LFLAGS@
RANLIB	=		@RANLIB@
INSTALL	=		@top_srcdir@/install.sh
INSTALL_PROGRAM	=	@INSTALL_PROGRAM@
INSTALL_DATA	=	@INSTALL_DATA@

LIBOBJS =		@LIBOBJS@
LIBS	=		@LIBS@

##
## end of configure written portion
##

MC	=	../../comp/mindycomp

INSPECTOR-LIBS = x-inspector-lib.dbc inspector-base.dbc text-inspector.dbc
XINSPECTOR-OBJS = x-library.dbc class-diagram.dbc x-inspector.dbc
OBJS = ${INSPECTOR-LIBS} ${XINSPECTOR-OBJS}

all: ${OBJS}

inspector-base.dbc: ${SRCDIR}/inspector-base.dylan
	${MC} -linspector-base -o inspector-base.dbc ${SRCDIR}/inspector-base.dylan

text-inspector.dbc: ${SRCDIR}/text-inspector.dylan
	${MC} -ltext-inspector -o text-inspector.dbc ${SRCDIR}/text-inspector.dylan

x-library.dbc: ${SRCDIR}/x-library.dylan
	${MC} -lx-inspector -o x-library.dbc ${SRCDIR}/x-library.dylan

class-diagram.dbc: ${SRCDIR}/class-diagram.dylan
	${MC} -lx-inspector -o class-diagram.dbc ${SRCDIR}/class-diagram.dylan

x-inspector.dbc: ${SRCDIR}/x-inspector.dylan
	${MC} -lx-inspector -o x-inspector.dbc ${SRCDIR}/x-inspector.dylan

x-inspector-lib.dbc: ${XINSPECTOR-OBJS}
	cat ${XINSPECTOR-OBJS} > $@

clean:
	rm -f ${OBJS} *~ \#* core

realclean:
	rm -f ${OBJS} Makefile *~ \#* core

install: inspector-base.dbc text-inspector.dbc x-inspector-lib.dbc
	${INSTALL_DATA} inspector-base.dbc ${LIBDIR}
	${INSTALL_DATA} text-inspector.dbc ${LIBDIR}
	${INSTALL_DATA} x-inspector-lib.dbc ${LIBDIR}
