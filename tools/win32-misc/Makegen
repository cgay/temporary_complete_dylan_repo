
if (! $win32) {
    die "Why are you running this on a computer that isn't running win32?\n";
}

# Wrapped RCS stuff
do install_from_src('bin', 'rcs-wrapper.perl');
do install_from_src('bin', 'ci.bat');
do install_from_src('bin', 'co.bat');
do install_from_src('bin', 'rcs.bat');
do install_from_src('bin', 'rcsdiff.bat');
do install_from_src('bin', 'rlog.bat');

# Custom utils with wrappers
do install_from_src('bin', 'autoconf.perl');
do install_from_src('bin', 'configure.bat');

do install_from_src('bin', 'find-dylan-files.bat');
do install_from_src('bin', 'find-dylan-files.perl');

do install_from_src('bin', 'mass-ci.bat');
do install_from_src('bin', 'mass-ci.perl');

do install_from_src('bin', 'mass-diff.bat');
do install_from_src('bin', 'mass-diff.perl');

do install_from_src('bin', 'mk-build-tree.bat');
do install_from_src('bin', 'mk-build-tree.perl');

do install_from_src('bin', 'mk-rcs-links.bat');
do install_from_src('bin', 'mk-rcs-links.perl');

do install_from_src('bin', 'rcsupdate.bat');
do install_from_src('bin', 'rcsupdate.perl');

do install_from_src('bin', 'tree-diff.bat');
do install_from_src('bin', 'tree-diff.perl');

do install_from_src('bin', 'unix-find.bat');
do install_from_src('bin', 'unix-find.perl');

do install_from_src('bin', 'which.bat');
do install_from_src('bin', 'which.perl');

do install_from_src('bin', 'gen-makefile.bat');
# gen-makefile.perl is in shared-misc

# Custom utils that are straight batch files
do install_from_src('bin', 'build-tags.bat');
do install_from_src('bin', 'dytc.bat');

# Custom perl scripts without wrappers
do install_from_src('bin', 'find-unrcsed-files.perl');
do install_from_src('bin', 'module-tool.perl');
do install_from_src('bin', 'shadows.perl');

# Can't use emit_c_file_rule because they don't build executables
print <<EOF;

dbclink.exe : \$(SRCDIR)/dbclink.c
	cl -nologo -Ox \$(SRCDIR)/dbclink.c -o dbclink.exe

EOF
do install ('bin', 'dbclink.exe');
push(@compile_dependencies, 'dbclink.exe');
