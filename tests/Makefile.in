SHELL	=	/bin/sh

##
## begin autoconf'ed source
##

prefix	=		@prefix@
exec_prefix	=	@exec_prefix@
srcdir	=		@srcdir@

SRCDIR	=		${srcdir}
BINDIR	=		${exec_prefix}/bin
LIBDIR	=		${exec_prefix}/lib/mindy

CC	=		@CC@
CCOPTS	=		@CCOPTS@
CFLAGS	=		$(CCOPTS) -I${SRCDIR} @DEFS@ -DBINDIR=\"${BINDIR}\" -DLIBDIR=\"${LIBDIR}\"
YACC	=		@YACC@
YFLAGS	=		-d
LEX	=		@LEX@
LFLAGS	=		@LFLAGS@
RANLIB	=		@RANLIB@
INSTALL	=		@INSTALL@
INSTALL_PROGRAM	=	@INSTALL_PROGRAM@
INSTALL_DATA	=	@INSTALL_DATA@

LIBOBJS =		@LIBOBJS@
LIBS	=		@LIBS@

##
## end of configure written portion
##

MC	=	../comp/mc
INTERP	=	../interp/mindy
MINDYFLAGS =
MINDYPATH =   MINDYPATH=../libraries/dylan:../libraries/coll-ext:../libraries/string-ext:../libraries/streams:../libraries/random


OBJS = dylan-test.dbc string-extensions-test.dbc

all: ${OBJS}
	for f in ${OBJS}; do $(MINDYPATH) $(INTERP) -f $$f; done

dylan-test.dbc: ${SRCDIR}/dylan-test.dylan
	${MC} ${MINDYFLAGS} -o dylan-test.dbc ${SRCDIR}/dylan-test.dylan

string-extensions-test.dbc: ${SRCDIR}/string-extensions-test.dylan
	${MC} ${MINDYFLAGS} -lregression-test -o string-extensions-test.dbc ${SRCDIR}/string-extensions-test.dylan

clean:
	rm -f ${OBJS} *~ \#* core

realclean:
	rm -f ${OBJS} Makefile *~ \#* core

install:
