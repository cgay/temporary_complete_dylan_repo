
$D2CFLAGS = '-L../../runtime/c-code -L../../runtime/gc '
    . '-L../../runtime/dylan -L../../runtime/streams '
    . '-L../../runtime/print -L../../runtime/format '
    . '-L../../runtime/random -L../../runtime/coll-ext '
    . '-L../../runtime/string-ext';
$CPPFLAGS = '-I$(SRCROOT)/runtime';

if ($stage2) {
    push(@compile_dependencies, 'compiler-cback.lib.du libcback.a');
}
else {
    push(@compile_dependencies, 'cbacklib.dbc');
    push(@files_to_clean, '*.dbc');
    $D2C = 'mindy -f $(BUILDROOT)/compiler/main/d2c.dbc';
    print <<'EOF';

.PHONY: d2c-compile

d2c-compile: compiler-cback.lib.du libcback.a

MC = mindycomp
MINDYFLAGS = 
MINDY = mindy

%.dbc: %.dylan
	$(MC) ${MINDYFLAGS} -lcompiler-cback -o $@ $<

OBJS = \
	cback-exports.dbc \
	stackanal.dbc \
	cback.dbc \
	primemit.dbc \
	heap.dbc

cbacklib.dbc: ${OBJS}
	cat $^ > $@

EOF
}

do emit_library_rule(
    'Cback', '$(BUILDROOT)/force.timestamp', '-L../base -L../front'
);

