
print <<'EOF';

AS = /bin/as
CC = gcc
CPPFLAGS = -I$(SRCROOT)/runtime
CFLAGS = -g

OBJS = allocate.o nlx.o hppa.o main.o

libruntime.a: $(OBJS)
	ar crvu libruntime.a $(OBJS)

EOF

push(@compile_dependencies, 'libruntime.a');

do install('lib', 'libruntime.a');

push(@files_to_clean, '$(OBJS)', 'libruntime.a');
