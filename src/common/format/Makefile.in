##
##  This is the makefile for the Mindy format library, format-lib.dbc.
##

SHELL	=	/bin/sh

##
## begin autoconf'ed source
##

prefix	=		@prefix@
exec_prefix	=	@exec_prefix@
srcdir	=		@srcdir@

SRCDIR	=		${srcdir}
BINDIR	=		${exec_prefix}/bin
LIBDIR	=		${exec_prefix}/lib/mindy

CC	=		@CC@
CCOPTS	=		@CCOPTS@
CFLAGS	=		$(CCOPTS) -I${SRCDIR} @DEFS@ -DBINDIR=\"${BINDIR}\" -DLIBDIR=\"${LIBDIR}\"
YACC	=		@YACC@
YFLAGS	=		-d
LEX	=		@LEX@
LFLAGS	=		@LFLAGS@
RANLIB	=		@RANLIB@
INSTALL	=		@INSTALL@
INSTALL_PROGRAM	=	@INSTALL_PROGRAM@
INSTALL_DATA	=	@INSTALL_DATA@

LIBOBJS =		@LIBOBJS@
LIBS	=		@LIBS@

##
## end of configure written portion
##

MC	= ../../comp/mindycomp

MINDYFLAGS = -lFormat

OBJS = library.dbc format.dbc format-buf.dbc

all: format-lib.dbc debugger-format.dbc

format-lib.dbc: ${OBJS}
	cat ${OBJS} > $@

library.dbc: ${SRCDIR}/library.dylan
	${MC} ${MINDYFLAGS} -o library.dbc ${SRCDIR}/library.dylan
format.dbc: ${SRCDIR}/format.dylan
	${MC} ${MINDYFLAGS} -o format.dbc ${SRCDIR}/format.dylan
format-buf.dbc: ${SRCDIR}/format-buf.dylan
	${MC} ${MINDYFLAGS} -o format-buf.dbc ${SRCDIR}/format-buf.dylan

debugger-format.dbc: ${SRCDIR}/debugger-format.dylan
	${MC} -ldebugger-format -o debugger-format.dbc \
		${SRCDIR}/debugger-format.dylan
clean:
	rm -f ${OBJS} format-lib.dbc debugger-format.dbc *~ \#* core

realclean:
	rm -f ${OBJS} format-lib.dbc debugger-format.dbc Makefile *~ \#* core

install: format-lib.dbc debugger-format.dbc
	${INSTALL_DATA} format-lib.dbc ${LIBDIR}
	${INSTALL_DATA} debugger-format.dbc ${LIBDIR}
