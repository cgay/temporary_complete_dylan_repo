##  This is the makefile for the "demo" directory
##

SHELL	=	/bin/sh

##
## begin autoconf'ed source
##

prefix	=		@prefix@
exec_prefix	=	@exec_prefix@
srcdir	=		@srcdir@

SRCDIR	=		${srcdir}
BINDIR	=		${exec_prefix}/bin
LIBDIR	=		${exec_prefix}/lib/mindy

CC	=		@CC@
CCOPTS	=		@CCOPTS@
CFLAGS	=		$(CCOPTS) -I${SRCDIR} @DEFS@ -DBINDIR=\"${BINDIR}\" -DLIBDIR=\"${LIBDIR}\"
YACC	=		@YACC@
YFLAGS	=		-d
LEX	=		@LEX@
LFLAGS	=		@LFLAGS@
RANLIB	=		@RANLIB@
INSTALL	=		@top_srcdir@/install.sh
INSTALL_PROGRAM	=	@INSTALL_PROGRAM@
INSTALL_DATA	=	@INSTALL_DATA@

LIBOBJS =		@LIBOBJS@
LIBS	=		@LIBS@

##
## end of configure written portion
##

MC	=	../../comp/mindycomp

MINDYFLAGS = -lstream-extensions

OBJS =  library.dbc stream-extensions.dbc \
	indenting-streams.dbc combination-streams.dbc


stream-extensions-lib.dbc: ${OBJS}
	cat ${OBJS} > $@

library.dbc: ${SRCDIR}/library.dylan
	${MC} ${MINDYFLAGS} -o library.dbc ${SRCDIR}/library.dylan

stream-extensions.dbc: ${SRCDIR}/stream-extensions.dylan
	${MC} ${MINDYFLAGS} -o stream-extensions.dbc ${SRCDIR}/stream-extensions.dylan

indenting-streams.dbc: ${SRCDIR}/indenting-streams.dylan
	${MC} ${MINDYFLAGS} -o indenting-streams.dbc ${SRCDIR}/indenting-streams.dylan

combination-streams.dbc: ${SRCDIR}/combination-streams.dylan
	${MC} ${MINDYFLAGS} -o combination-streams.dbc ${SRCDIR}/combination-streams.dylan

clean:
	rm -f ${OBJS} stream-extensions-lib.dbc *~ \#* core

realclean:
	rm -f ${OBJS} stream-extensions-lib.dbc Makefile *~ \#* core

install: stream-extensions-lib.dbc
	${INSTALL_DATA} stream-extensions-lib.dbc ${LIBDIR}
