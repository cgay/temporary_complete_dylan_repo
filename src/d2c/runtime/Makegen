local($common);

if (!$enable_bootstrap || $enable_mindy_bootstrap) {
    if ($host_name eq $target_name) {
	do compile_subdirs('c-code');
    };

    do compile_subdirs('dylan',
		       'melange',
#		       'c-ffi',
		       'garbage-collection',
		       '../../common/transcendental',
		       'random',
		       '../../common/threads',
		       '../../common/table-ext',
		       '../../common/common-dylan',
		       '../../common/collections', # FIXME
		       '../../common/collection-extensions',
		       '../../common/string-ext',
		       '../../common/regular-expressions',
		       '../../common/io',
		       '../../common/system',
		       '../../common/getopt');

    do install_from_src($includedir, "runtime.h");
} else {
    do compile_subdirs('random');
}
