
if ($stage2) {
    do compile_subdirs('runtime', 'compiler', 'demos', 'dig');
}
else {
    do compile_subdirs('compiler', 'runtime', 'demos', 'dig');
    print <<'EOF';
.PHONY: d2c-compile d2c-install

d2c-compile: compile
	$(MAKE) -C compiler d2c-compile

d2c-install: install
	$(MAKE) -C compiler d2c-install

EOF
}
