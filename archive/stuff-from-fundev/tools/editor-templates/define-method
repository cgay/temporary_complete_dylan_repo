define method
// ---*** Do we have any (more) adjectives for this?
// sideways // ---*** ?
define method XadjectiveX %e%(Xmethod-nameX)
    (XnameX :: <XtypeX>,
     XnameX == XexprX,
     #next XnameX,
     #rest XnameX,
     #key XkeyX: XkeyX = XexprX,
     #all-keys)
 => (XnameX,
     #rest XnameX)
  XbodyX;
end method ;
