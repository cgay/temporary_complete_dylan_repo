test.dylan: $(GTKHDIR)/test.h dependencies
	$(GTKTOD) $(GTKHDIR)/test.h $@


# remove all generated files
clean:
	rm -f $(GTK) *.bak *.exp

# remove internal temporary files
tidy:
	rm -f *.bak *.exp

DTAGS=/u/dylan/tools/gnuemacs/dtags
TAGS: $(GLIB) special.dylan
	$(DTAGS) special.dylan $(GLIB)

tags: TAGS
