FUNCTIONAL_DEVELOPER_RELEASE_BIN=$(FUNCTIONAL_DEVELOPER_RELEASE_INSTALL)/bin
FUNCTIONAL_DEVELOPER_RELEASE_INCLUDE=$(FUNCTIONAL_DEVELOPER_RELEASE_INSTALL)/include
FUNCTIONAL_DEVELOPER_RELEASE_LIB=$(FUNCTIONAL_DEVELOPER_RELEASE_INSTALL)/lib
FUNCTIONAL_DEVELOPER_USER_BIN=$(FUNCTIONAL_DEVELOPER_USER_INSTALL)/bin
FUNCTIONAL_DEVELOPER_USER_INCLUDE=$(FUNCTIONAL_DEVELOPER_USER_INSTALL)/include
FUNCTIONAL_DEVELOPER_USER_LIB=$(FUNCTIONAL_DEVELOPER_USER_INSTALL)/lib

CC      = gcc
LINKLIB = ${FUNCTIONAL_DEVELOPER_LD}  $(FUNCTIONAL_DEVELOPER_LINKLIB_FLAGS) -o 
CFLAGS  = -g -D_DEBUG ${FUNCTIONAL_DEVELOPER_C_FLAGS} -I${FUNCTIONAL_DEVELOPER_USER_INCLUDE} 
OBJS    = run-time.o debug-print.o dummy-threads.o
LIB	= lib_run-time.${FUNCTIONAL_DEVELOPER_LIB_SUFFIX}

${LIB}: ${OBJS}
	${LINKLIB} $@ ${OBJS}

install: ${LIB} 
	(cd $(FUNCTIONAL_DEVELOPER_USER_LIB); rm -f ${LIB})
	cp -p ${LIB} ${FUNCTIONAL_DEVELOPER_USER_LIB}
	(cd $(FUNCTIONAL_DEVELOPER_USER_INCLUDE); rm -f run-time.h)
	cp -p run-time.h ${FUNCTIONAL_DEVELOPER_USER_INCLUDE}

clean: 
	rm -f ${OBJS} ${LIB}


